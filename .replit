run = "npm run dev"
entrypoint = "app/page.tsx"
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json", ".next"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"
packages = ["lsof"]

[deployment]
run = "npm run build && npm start"
deploymentTarget = "autoscale"
ignorePorts = false

[agent]
expertMode = true

[[ports]]
localPort = 3000
externalPort = 80

[[ports]]
localPort = 3001
externalPort = 3000

[[ports]]
localPort = 3002
externalPort = 3002

[[ports]]
localPort = 40471
externalPort = 3001
exposeLocalhost = true
